<!-- Content -->
<div class="p-3 md:p-4">
    <div class="max-w-[1800px] mx-auto">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2 mb-4">
            <h1 class="text-xl md:text-2xl font-semibold">Logs</h1>
            <nav class="text-[13px] text-gray-500">
                <a href="/" class="text-blue-600 hover:underline">Dashboard</a> / Logs
            </nav>
        </div>

        <div class="bg-white border border-gray-200 rounded">
            <div class="px-3 md:px-4 py-3 border-b border-gray-200">
                <strong>Filters</strong>
                <form method="get" class="mt-2">
                    <div class="flex flex-wrap items-center gap-2 md:gap-4 mb-2">
                        <span>Search:</span>
                        <input type="text" name="search" value="<%= form.search || '' %>"
                            placeholder="Search log messages..."
                            class="px-2 py-1 text-sm border border-gray-300 rounded w-48">
                        <button type="submit"
                            class="px-3 py-1 text-sm bg-blue-500 text-white rounded hover:bg-blue-600">Search</button>
                        <% if (form.search) { %>
                            <a href="?exclude_levels[]=debug"
                                class="px-2 py-1 text-sm text-gray-500 hover:text-gray-700">Clear</a>
                            <% } %>
                    </div>
                    <div class="flex flex-wrap items-center gap-2 md:gap-4">
                        <span>Quick filters:</span>
                        <a href="?search=AI&exclude_levels[]=debug"
                            class="px-2 py-1 text-sm text-xs bg-purple-100 text-purple-700 rounded hover:bg-purple-200">AI
                            Logs</a>
                        <a href="?search=Gemini&exclude_levels[]=debug"
                            class="px-2 py-1 text-sm text-xs bg-red-100 text-red-700 rounded hover:bg-red-200">Gemini
                            Errors</a>
                        <a href="?search=BotRunner&exclude_levels[]=debug"
                            class="px-2 py-1 text-sm text-xs bg-green-100 text-green-700 rounded hover:bg-green-200">BotRunner</a>
                    </div>
                </form>
                <form method="get" class="mt-2">
                    <div class="flex flex-wrap items-center gap-2 md:gap-4">
                        <span>Exclude:</span>
                        <% levels.forEach(function(level, key) { %>
                            <label class="flex items-center gap-1 cursor-pointer">
                                <input type="checkbox" class="rounded border-gray-300" name="exclude_levels[]"
                                    value="<%= level %>" id="level_<%= key %>" onChange="this.form.submit()"
                                    <%=form.excludeLevels && form.excludeLevels.includes(level) ? 'checked' : '' %>>
                                <span class="text-sm">
                                    <%= level %>
                                </span>
                            </label>
                            <% }); %>
                                <% if (form.search) { %>
                                    <input type="hidden" name="search" value="<%= form.search %>">
                                    <% } %>
                    </div>
                </form>
            </div>

            <div class="p-3 md:p-4 overflow-x-auto">
                <table class="w-full border-collapse text-[13px]">
                    <thead>
                        <tr>
                            <th class="border border-gray-200 bg-gray-50 font-semibold px-3 py-2">Level</th>
                            <th class="border border-gray-200 bg-gray-50 font-semibold px-3 py-2">Message</th>
                            <th class="border border-gray-200 bg-gray-50 font-semibold px-3 py-2">CreatedAt</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% logs.forEach(function(log) { %>
                            <tr class="hover:bg-gray-100">
                                <td class="border border-gray-200 px-3 py-2">
                                    <% if (log.level==='debug' ) { %>
                                        <span class="text-gray-400">
                                            <%= log.level %>
                                        </span>
                                        <% } else if (log.level==='info' ) { %>
                                            <span class="text-blue-500">
                                                <%= log.level %>
                                            </span>
                                            <% } else if (log.level==='error' ) { %>
                                                <span class="text-red-600 font-bold">
                                                    <%= log.level %>
                                                </span>
                                                <% } %>
                                </td>
                                <td class="border border-gray-200 px-3 py-2 break-all">
                                    <%= log.message %>
                                </td>
                                <td class="border border-gray-200 px-3 py-2 whitespace-nowrap">
                                    <%= formatDate(log.created_at, 'yy-m-d H:i:s' ) %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (pagination && pagination.totalPages> 1) { %>
                <% var searchParam=form.search ? '&search=' + encodeURIComponent(form.search) : '' ; var
                    excludeParam=form.excludeLevels && form.excludeLevels.length> 0 ? '&exclude_levels[]=' +
                    form.excludeLevels.join('&exclude_levels[]=') : '';
                    %>
                    <div
                        class="px-3 md:px-4 py-3 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-2">
                        <div class="text-sm text-gray-500">
                            Showing <%= ((pagination.page - 1) * pagination.limit) + 1 %> to <%=
                                    Math.min(pagination.page * pagination.limit, pagination.totalCount) %> of <%=
                                        pagination.totalCount %> logs
                        </div>
                        <div class="flex items-center gap-1">
                            <% if (pagination.hasPrevPage) { %>
                                <a href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %><%= excludeParam %><%= searchParam %>"
                                    class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-100">&laquo;
                                    Previous</a>
                                <% } else { %>
                                    <span
                                        class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-400 cursor-not-allowed">&laquo;
                                        Previous</span>
                                    <% } %>

                                        <% var startPage=Math.max(1, pagination.page - 2); %>
                                            <% var endPage=Math.min(pagination.totalPages, pagination.page + 2); %>
                                                <% if (startPage> 1) { %>
                                                    <a href="?page=1&limit=<%= pagination.limit %><%= excludeParam %><%= searchParam %>"
                                                        class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-100">1</a>
                                                    <% if (startPage> 2) { %>
                                                        <span class="px-2 text-gray-400">...</span>
                                                        <% } %>
                                                            <% } %>

                                                                <% for (var i=startPage; i <=endPage; i++) { %>
                                                                    <% if (i===pagination.page) { %>
                                                                        <span
                                                                            class="px-3 py-1 text-sm border border-blue-500 bg-blue-500 text-white rounded">
                                                                            <%= i %>
                                                                        </span>
                                                                        <% } else { %>
                                                                            <a href="?page=<%= i %>&limit=<%= pagination.limit %><%= excludeParam %><%= searchParam %>"
                                                                                class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-100">
                                                                                <%= i %>
                                                                            </a>
                                                                            <% } %>
                                                                                <% } %>

                                                                                    <% if (endPage <
                                                                                        pagination.totalPages) { %>
                                                                                        <% if (endPage <
                                                                                            pagination.totalPages - 1) {
                                                                                            %>
                                                                                            <span
                                                                                                class="px-2 text-gray-400">...</span>
                                                                                            <% } %>
                                                                                                <a href="?page=<%= pagination.totalPages %>&limit=<%= pagination.limit %><%= excludeParam %><%= searchParam %>"
                                                                                                    class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-100">
                                                                                                    <%= pagination.totalPages
                                                                                                        %>
                                                                                                </a>
                                                                                                <% } %>

                                                                                                    <% if
                                                                                                        (pagination.hasNextPage)
                                                                                                        { %>
                                                                                                        <a href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %><%= excludeParam %><%= searchParam %>"
                                                                                                            class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-100">Next
                                                                                                            &raquo;</a>
                                                                                                        <% } else { %>
                                                                                                            <span
                                                                                                                class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-400 cursor-not-allowed">Next
                                                                                                                &raquo;</span>
                                                                                                            <% } %>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>