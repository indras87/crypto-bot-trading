<!-- Content -->
<div class="p-4">
    <div class="max-w-[800px] mx-auto">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-semibold">Bot Settings</h1>
            <a href="/" class="text-gray-600 hover:text-gray-800 cursor-pointer">
                <i class="fas fa-arrow-left mr-1"></i> Back
            </a>
        </div>

        <% if (saved) { %>
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
                <i class="fas fa-check-circle mr-2"></i> Settings saved successfully!
            </div>
        <% } %>

        <form action="/settings" method="POST" autocomplete="off" class="space-y-6">
            <!-- Webserver Settings -->
            <div class="bg-white rounded shadow p-6">
                <h2 class="text-lg font-medium mb-4 flex items-center gap-2">
                    <i class="fas fa-server text-gray-500"></i> Webserver
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="webserver_ip" class="block text-sm font-medium text-gray-700 mb-1">IP Address</label>
                        <input type="text" id="webserver_ip" name="webserver_ip"
                               value="<%= settings.webserver.ip || '' %>"
                               placeholder="0.0.0.0"
                               class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                               autocomplete="off">
                    </div>
                    <div>
                        <label for="webserver_port" class="block text-sm font-medium text-gray-700 mb-1">Port</label>
                        <input type="number" id="webserver_port" name="webserver_port"
                               value="<%= settings.webserver.port || '' %>"
                               placeholder="8080"
                               class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                               autocomplete="off">
                    </div>
                    <div>
                        <label for="webserver_username" class="block text-sm font-medium text-gray-700 mb-1">Username (Basic Auth)</label>
                        <input type="text" id="webserver_username" name="webserver_username"
                               value="<%= settings.webserver.username || '' %>"
                               placeholder="admin"
                               class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                               autocomplete="off">
                    </div>
                    <div>
                        <label for="webserver_password" class="block text-sm font-medium text-gray-700 mb-1">Password (Basic Auth)</label>
                        <input type="password" id="webserver_password" name="webserver_password"
                               value="<%= settings.webserver.password || '' %>"
                               placeholder="••••••••"
                               class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                               autocomplete="off">
                    </div>
                </div>
                <p class="mt-3 text-xs text-gray-500">
                    <i class="fas fa-info-circle mr-1"></i>
                    Note: Changing webserver settings requires a restart of the bot.
                </p>
            </div>

            <!-- Notifications Section -->
            <div class="bg-white rounded shadow p-6">
                <h2 class="text-lg font-medium mb-1 flex items-center gap-2">
                    <i class="fas fa-bell text-yellow-500"></i> Notifications
                </h2>
                <p class="text-sm text-gray-500 mb-4">
                    Optional configuration for receiving alerts on signal and trading events.
                </p>

                <!-- Slack -->
                <div class="border-t border-gray-200 pt-4 mt-4 first:border-t-0 first:pt-0 first:mt-0">
                    <h3 class="text-sm font-medium text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fab fa-slack text-purple-500"></i> Slack
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="md:col-span-2">
                            <label for="slack_webhook" class="block text-sm font-medium text-gray-700 mb-1">Webhook URL</label>
                            <input type="url" id="slack_webhook" name="slack_webhook"
                                   value="<%= settings.notify.slack.webhook || '' %>"
                                   placeholder="https://hooks.slack.com/services/..."
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="slack_name" class="block text-sm font-medium text-gray-700 mb-1">Bot Name</label>
                            <input type="text" id="slack_name" name="slack_name"
                                   value="<%= settings.notify.slack.name || '' %>"
                                   placeholder="crypto-bot"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="slack_icon_emoji" class="block text-sm font-medium text-gray-700 mb-1">Icon Emoji</label>
                            <input type="text" id="slack_icon_emoji" name="slack_icon_emoji"
                                   value="<%= settings.notify.slack.icon_emoji || '' %>"
                                   placeholder=":ghost:"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>

                <!-- Mail -->
                <div class="border-t border-gray-200 pt-4 mt-4">
                    <h3 class="text-sm font-medium text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fas fa-envelope text-blue-500"></i> Mail
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="md:col-span-2">
                            <label for="mail_to" class="block text-sm font-medium text-gray-700 mb-1">Recipient Email</label>
                            <input type="email" id="mail_to" name="mail_to"
                                   value="<%= settings.notify.mail.to || '' %>"
                                   placeholder="example@example.de"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_server" class="block text-sm font-medium text-gray-700 mb-1">SMTP Server</label>
                            <input type="text" id="mail_server" name="mail_server"
                                   value="<%= settings.notify.mail.server || '' %>"
                                   placeholder="smtp.example.com"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_port" class="block text-sm font-medium text-gray-700 mb-1">SMTP Port</label>
                            <input type="number" id="mail_port" name="mail_port"
                                   value="<%= settings.notify.mail.port || '' %>"
                                   placeholder="465"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                            <input type="text" id="mail_username" name="mail_username"
                                   value="<%= settings.notify.mail.username || '' %>"
                                   placeholder="foo@foo.de"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <input type="password" id="mail_password" name="mail_password"
                                   value="<%= settings.notify.mail.password || '' %>"
                                   placeholder="••••••••"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>

                <!-- Telegram -->
                <div class="border-t border-gray-200 pt-4 mt-4">
                    <h3 class="text-sm font-medium text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fab fa-telegram text-blue-400"></i> Telegram
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="telegram_token" class="block text-sm font-medium text-gray-700 mb-1">Bot Token</label>
                            <input type="text" id="telegram_token" name="telegram_token"
                                   value="<%= settings.notify.telegram.token || '' %>"
                                   placeholder="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="telegram_chat_id" class="block text-sm font-medium text-gray-700 mb-1">Chat ID</label>
                            <input type="text" id="telegram_chat_id" name="telegram_chat_id"
                                   value="<%= settings.notify.telegram.chat_id || '' %>"
                                   placeholder="-1001234567890"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="flex justify-end gap-3">
                <a href="/" class="px-4 py-2 border border-gray-300 rounded text-sm text-gray-700 hover:bg-gray-50 cursor-pointer">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded text-sm cursor-pointer">
                    <i class="fas fa-save mr-1"></i> Save Settings
                </button>
            </div>
        </form>
    </div>
</div>
