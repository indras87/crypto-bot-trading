<div class="p-4">
    <div class="flex gap-6 max-w-[1100px]">
        <%- include('../components/settings_sidebar', { activeSettingsPage }) %>

        <div class="flex-1 min-w-0">
            <h1 class="text-2xl font-semibold mb-4">Notifications</h1>

            <form action="/settings/notifications" method="POST" autocomplete="off" class="space-y-4 max-w-[600px]">
                <% if (saved) { %>
                    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
                        <i class="fas fa-check-circle mr-2"></i> Settings saved successfully!
                    </div>
                <% } %>

                <!-- Slack -->
                <div class="bg-white rounded shadow p-6">
                    <h2 class="text-sm font-semibold text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fab fa-slack text-purple-500"></i> Slack
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="md:col-span-2">
                            <label for="slack_webhook" class="block text-sm font-medium text-gray-700 mb-1">Webhook URL</label>
                            <input type="url" id="slack_webhook" name="slack_webhook"
                                   value="<%= settings.notify.slack.webhook || '' %>"
                                   placeholder="https://hooks.slack.com/services/..."
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="slack_name" class="block text-sm font-medium text-gray-700 mb-1">Bot Name</label>
                            <input type="text" id="slack_name" name="slack_name"
                                   value="<%= settings.notify.slack.name || '' %>"
                                   placeholder="crypto-bot"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="slack_icon_emoji" class="block text-sm font-medium text-gray-700 mb-1">Icon Emoji</label>
                            <input type="text" id="slack_icon_emoji" name="slack_icon_emoji"
                                   value="<%= settings.notify.slack.icon_emoji || '' %>"
                                   placeholder=":ghost:"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>

                <!-- Mail -->
                <div class="bg-white rounded shadow p-6">
                    <h2 class="text-sm font-semibold text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fas fa-envelope text-blue-500"></i> Mail
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="md:col-span-2">
                            <label for="mail_to" class="block text-sm font-medium text-gray-700 mb-1">Recipient Email</label>
                            <input type="email" id="mail_to" name="mail_to"
                                   value="<%= settings.notify.mail.to || '' %>"
                                   placeholder="example@example.de"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_server" class="block text-sm font-medium text-gray-700 mb-1">SMTP Server</label>
                            <input type="text" id="mail_server" name="mail_server"
                                   value="<%= settings.notify.mail.server || '' %>"
                                   placeholder="smtp.example.com"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_port" class="block text-sm font-medium text-gray-700 mb-1">SMTP Port</label>
                            <input type="number" id="mail_port" name="mail_port"
                                   value="<%= settings.notify.mail.port || '' %>"
                                   placeholder="465"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                            <input type="text" id="mail_username" name="mail_username"
                                   value="<%= settings.notify.mail.username || '' %>"
                                   placeholder="foo@foo.de"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="mail_password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <input type="password" id="mail_password" name="mail_password"
                                   value="<%= settings.notify.mail.password || '' %>"
                                   placeholder="••••••••"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>

                <!-- Telegram -->
                <div class="bg-white rounded shadow p-6">
                    <h2 class="text-sm font-semibold text-gray-800 mb-3 flex items-center gap-2">
                        <i class="fab fa-telegram text-blue-400"></i> Telegram
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="telegram_token" class="block text-sm font-medium text-gray-700 mb-1">Bot Token</label>
                            <input type="text" id="telegram_token" name="telegram_token"
                                   value="<%= settings.notify.telegram.token || '' %>"
                                   placeholder="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono"
                                   autocomplete="off">
                        </div>
                        <div>
                            <label for="telegram_chat_id" class="block text-sm font-medium text-gray-700 mb-1">Chat ID</label>
                            <input type="text" id="telegram_chat_id" name="telegram_chat_id"
                                   value="<%= settings.notify.telegram.chat_id || '' %>"
                                   placeholder="-1001234567890"
                                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   autocomplete="off">
                        </div>
                    </div>
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded text-sm cursor-pointer">
                        <i class="fas fa-save mr-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
