<!-- Multi Timeframe Backtest Results -->
<div class="p-4">
    <div class="max-w-[1800px] mx-auto">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-2xl font-semibold">Multi Timeframe Backtesting Results <span class="text-gray-500"> - <%= strategyName %> - <%= displaySymbol %></span></h1>
            <nav class="text-sm text-gray-500">
                <a href="/" class="text-blue-600 hover:underline">Dashboard</a> /
                <a href="/backtest" class="text-blue-600 hover:underline">Backtesting</a> /
                <a href="/backtest/multi" class="text-blue-600 hover:underline">Multi Timeframe</a> /
                Results
            </nav>
        </div>

        <!-- Summary Section - Side by Side -->
        <div class="bg-white border border-gray-200 rounded mb-4">
            <div class="px-4 py-3 border-b border-gray-200 font-medium">Summary</div>
            <div class="p-4 overflow-x-auto">
                <div class="flex gap-4" style="min-width: <%= results.length * 400 %>px;">
                    <% results.forEach(function(result) { %>
                        <div class="flex-1 min-w-[380px] border border-gray-200 rounded p-3">
                            <div class="font-semibold text-lg mb-2 text-center pb-2 border-b border-gray-200">
                                <%= result.period %>
                            </div>
                            <table class="backtest-table w-full border-collapse text-[13px]">
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Initial Capital</td>
                                    <td class="border border-gray-200 px-2 py-1.5"><%= result.summary.initialCapital.toFixed(2) %> $</td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Final Capital</td>
                                    <td class="border border-gray-200 px-2 py-1.5"><%= result.summary.finalCapital.toFixed(2) %> $</td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Net ROI</td>
                                    <td class="border border-gray-200 px-2 py-1.5 <%= result.summary.netProfit > 0 ? 'text-green-600' : 'text-red-600' %>"><%= result.summary.netProfit.toFixed(2) %> %</td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Sharpe Ratio</td>
                                    <td class="border border-gray-200 px-2 py-1.5"><%= result.summary.sharpeRatio.toFixed(2) %></td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Max Drawdown</td>
                                    <td class="border border-gray-200 px-2 py-1.5 text-red-600"><%= result.summary.maxDrawdown.toFixed(2) %> %</td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Avg Return/Trade</td>
                                    <td class="border border-gray-200 px-2 py-1.5 <%= result.summary.averagePNLPercent > 0 ? 'text-green-600' : 'text-red-600' %>"><%= result.summary.averagePNLPercent.toFixed(2) %> %</td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Total Trades</td>
                                    <td class="border border-gray-200 px-2 py-1.5"><%= result.summary.trades.total %></td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Winning Trades</td>
                                    <td class="border border-gray-200 px-2 py-1.5 text-green-600"><%= result.summary.trades.profitableCount %></td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Losing Trades</td>
                                    <td class="border border-gray-200 px-2 py-1.5 text-red-600"><%= result.summary.trades.lossMakingCount %></td>
                                </tr>
                                <tr>
                                    <td class="border border-gray-200 px-2 py-1.5">Win Rate</td>
                                    <td class="border border-gray-200 px-2 py-1.5"><%= result.summary.trades.profitabilityPercent.toFixed(1) %> %</td>
                                </tr>
                            </table>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Charts Section - Side by Side -->
        <% if (results.some(r => r.candles)) { %>
        <div class="bg-white border border-gray-200 rounded mb-4">
            <div class="px-4 py-3 border-b border-gray-200 font-medium">Charts</div>
            <div class="p-4 overflow-x-auto">
                <div class="flex gap-4" style="min-width: <%= results.length * 500 %>px;">
                    <% results.forEach(function(result) { %>
                        <div class="flex-1 min-w-[480px] border border-gray-200 rounded p-3">
                            <div class="font-semibold text-center pb-2 border-b border-gray-200 mb-2">
                                <%= result.period %>
                            </div>
                            <% if (result.candles) { %>
                                <div class="chart" data-candles="<%- result.candles.replace(/"/g, '&quot;') %>" data-title="<%= result.exchange %> - <%= result.symbol %> - <%= result.strategyName %> - <%= result.period %>"></div>
                            <% } else { %>
                                <p class="text-gray-500 text-center py-4">No chart data</p>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Trades Section - Side by Side -->
        <div class="bg-white border border-gray-200 rounded mb-4">
            <div class="px-4 py-3 border-b border-gray-200 font-medium">Trades</div>
            <div class="p-4 overflow-x-auto">
                <div class="flex gap-4" style="min-width: <%= results.length * 600 %>px;">
                    <% results.forEach(function(result) { %>
                        <div class="flex-1 min-w-[580px] border border-gray-200 rounded">
                            <div class="px-3 py-2 bg-gray-50 border-b border-gray-200 font-medium text-center">
                                <%= result.period %> (<%= result.trades.length %> trades)
                            </div>
                            <div class="overflow-x-auto max-h-[400px] overflow-y-auto">
                                <% var signalRows = (result.rows || []).filter(function(r) { return r.signal; }); %>
                                <% if (signalRows.length > 0) { %>
                                    <table class="backtest-table w-full border-collapse text-[13px]">
                                        <thead class="sticky top-0 bg-gray-50">
                                            <tr>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">#</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Time</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Price</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Signal</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">AI Analysis</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% signalRows.forEach(function(row, index) { %>
                                                <tr class="hover:bg-gray-100">
                                                    <td class="border border-gray-200 px-2 py-1.5"><%= index + 1 %></td>
                                                    <td class="border border-gray-200 px-2 py-1.5 whitespace-nowrap"><%= formatDate(row.time * 1000, 'yy-m-d H:i') %></td>
                                                    <td class="border border-gray-200 px-2 py-1.5"><%= row.price.toFixed(2) %></td>
                                                    <td class="border border-gray-200 px-2 py-1.5">
                                                        <% if (row.signal === 'long') { %>
                                                            <i class="fas fa-circle-chevron-up text-green-600" title="Long"></i>
                                                        <% } else if (row.signal === 'short') { %>
                                                            <i class="fas fa-circle-chevron-down text-red-600" title="Short"></i>
                                                        <% } else if (row.signal === 'close') { %>
                                                            <i class="fas fa-xmark text-gray-500" title="Close"></i>
                                                        <% } %>
                                                    </td>
                                                    <td class="border border-gray-200 px-2 py-1.5 text-xs">
                                                        <% if (row.ai) { %>
                                                            <span class="<%= row.ai.confirmed ? 'text-green-600' : 'text-red-600' %> font-medium">
                                                                <%= row.ai.confirmed ? 'Confirmed' : 'Rejected' %> (<%= (row.ai.confidence * 100).toFixed(0) %>%)
                                                            </span>
                                                        <% } else { %>
                                                            <span class="text-gray-400 italic">-</span>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                <% } else { %>
                                    <p class="text-gray-500 text-center py-4">No signals</p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Signal History Section - Side by Side -->
        <% if (results.some(r => r.rows && r.rows.length > 0)) { %>
        <div class="bg-white border border-gray-200 rounded mb-4">
            <div class="px-4 py-3 border-b border-gray-200 font-medium">Signal History</div>
            <div class="p-4 overflow-x-auto">
                <div class="flex gap-4" style="min-width: <%= results.length * 800 %>px;">
                    <% results.forEach(function(result) { %>
                        <div class="flex-1 min-w-[780px] border border-gray-200 rounded">
                            <div class="px-3 py-2 bg-gray-50 border-b border-gray-200 font-medium text-center">
                                <%= result.period %> (<%= result.rows.length %> rows)
                            </div>
                            <div class="overflow-x-auto max-h-[500px] overflow-y-auto">
                                <% if (result.rows && result.rows.length > 0) { %>
                                    <table class="backtest-table w-full border-collapse text-[13px]">
                                        <thead class="sticky top-0 bg-gray-50">
                                            <tr>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Time</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Price</th>
                                                <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5">Signal</th>
                                                <% if (result.indicatorKeys) { result.indicatorKeys.forEach(function(key) { %>
                                                    <th class="border border-gray-200 bg-gray-50 font-semibold px-2 py-1.5"><%= key %></th>
                                                <% }); } %>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% result.rows.forEach(function(row) { %>
                                                <tr class="hover:bg-gray-100">
                                                    <td class="border border-gray-200 px-2 py-1 whitespace-nowrap"><%= formatDate(row.time * 1000, 'yy-m-d H:i') %></td>
                                                    <td class="border border-gray-200 px-2 py-1"><%= row.price.toFixed(2) %></td>
                                                    <td class="border border-gray-200 px-2 py-1">
                                                        <% if (row.signal === 'long') { %>
                                                            <i class="fas fa-circle-chevron-up text-green-600"></i>
                                                        <% } else if (row.signal === 'short') { %>
                                                            <i class="fas fa-circle-chevron-down text-red-600"></i>
                                                        <% } else if (row.signal === 'close') { %>
                                                            <i class="fas fa-xmark text-gray-500"></i>
                                                        <% } else { %>
                                                            <span class="text-gray-300">-</span>
                                                        <% } %>
                                                    </td>
                                                    <% if (result.indicatorKeys) { result.indicatorKeys.forEach(function(key) { %>
                                                        <td class="border border-gray-200 px-2 py-1"><%= row.debug && row.debug[key] !== undefined ? (typeof row.debug[key] === 'number' ? row.debug[key].toFixed(4) : row.debug[key]) : '-' %></td>
                                                    <% }); } %>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                <% } else { %>
                                    <p class="text-gray-500 text-center py-4">No data</p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<script src="https://d3js.org/d3.v4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/techan.js/0.8.0/techan.min.js"></script>
<script src="/js/backtest.js?v=<%= assetVersion %>"></script>
