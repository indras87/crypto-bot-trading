<script>
// Mobile sidebar toggle
document.getElementById('sidebar-toggle')?.addEventListener('click', function() {
    document.getElementById('sidebar').classList.toggle('hidden');
});

// Bots table sorting — use event delegation on thead to avoid duplicate listeners
(function() {
    var sortState = { col: -1, asc: true };
    var initialized = false;

    function initBotsTableSort() {
        if (initialized) return;
        var table = document.getElementById('bots-table');
        if (!table) return;

        initialized = true;

        // Single delegated listener on the thead
        table.querySelector('thead').addEventListener('click', function(e) {
            var th = e.target.closest('.sortable-header');
            if (!th) return;

            var col = parseInt(th.dataset.col);
            if (sortState.col === col) {
                sortState.asc = !sortState.asc;
            } else {
                sortState.col = col;
                sortState.asc = true;
            }
            sortBotsTable(table, col, sortState.asc);
            updateSortIcons(table, col, sortState.asc);
        });
    }

    function sortBotsTable(table, col, asc) {
        var tbody = table.querySelector('tbody');
        var rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort(function(a, b) {
            var aCell = a.querySelectorAll('td')[col];
            var bCell = b.querySelectorAll('td')[col];
            if (!aCell || !bCell) return 0;

            var aVal = aCell.dataset.sortValue || aCell.textContent.trim();
            var bVal = bCell.dataset.sortValue || bCell.textContent.trim();

            // Numeric sort for Capital column (col 4)
            var aNum = parseFloat(aVal);
            var bNum = parseFloat(bVal);
            if (!isNaN(aNum) && !isNaN(bNum)) {
                return asc ? aNum - bNum : bNum - aNum;
            }

            // String sort
            return asc
                ? aVal.localeCompare(bVal)
                : bVal.localeCompare(aVal);
        });

        rows.forEach(function(row) { tbody.appendChild(row); });
    }

    function updateSortIcons(table, activeCol, asc) {
        table.querySelectorAll('.sortable-header').forEach(function(th) {
            var icon = th.querySelector('.sort-icon');
            if (!icon) return;
            var col = parseInt(th.dataset.col);
            if (col === activeCol) {
                icon.textContent = asc ? '↑' : '↓';
                th.classList.add('text-blue-600');
                th.classList.remove('text-gray-600');
            } else {
                icon.textContent = '';
                th.classList.remove('text-blue-600');
                th.classList.add('text-gray-600');
            }
        });
    }

    // Init on DOMContentLoaded (or immediately if already loaded)
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initBotsTableSort);
    } else {
        initBotsTableSort();
    }

    // Also try to init when Bots tab is clicked (table may not exist yet if hidden)
    document.querySelectorAll('.tab-btn[data-tab="bots"]').forEach(function(btn) {
        btn.addEventListener('click', function() {
            setTimeout(initBotsTableSort, 50);
        });
    });
})();
</script>

