                                    <span class="px-2 py-1 rounded text-xs <%= bot.status === 'running' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                                        <%= bot.status === 'running' ? 'Running' : 'Stopped' %>
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-right whitespace-nowrap">
                                    <a href="/profiles/<%= profile.id %>/bots/<%= bot.id %>/edit" class="text-blue-600 hover:text-blue-800 mr-2" title="Edit"><i class="fas fa-pen-to-square"></i></a>
                                    <form action="/profiles/<%= profile.id %>/bots/<%= bot.id %>/delete" method="POST" class="inline" onsubmit="return confirm('Delete this bot?')">
                                        <button type="submit" class="text-red-600 hover:text-red-800 cursor-pointer" title="Delete"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="p-8 text-center text-gray-400">
                        <i class="fas fa-robot text-4xl mb-3"></i>
                        <p>No bots configured.</p>
                        <p class="text-sm mt-1">
                            <a href="/profiles/<%= profile.id %>/bots/new" class="text-blue-600 hover:underline">Add your first bot</a>
                        </p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

<script>
const profileId = '<%= profile.id %>';
const hasCredentials = <%= profile.apiKey && profile.secret ? 'true' : 'false' %>;

// Tab switching
document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const tabId = this.dataset.tab;

        // Update tab button styles
        document.querySelectorAll('.tab-btn').forEach(b => {
            b.classList.remove('border-blue-600', 'text-blue-600');
            b.classList.add('border-transparent', 'text-gray-500');
        });
        this.classList.remove('border-transparent', 'text-gray-500');
        this.classList.add('border-blue-600', 'text-blue-600');

        // Show/hide tab content
        document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden'));
        document.getElementById('tab-' + tabId).classList.remove('hidden');

        // Load balances when tab is first shown
        if (tabId === 'balances' && !window.balancesLoaded) {
            loadBalances();
        }

        // Load orders when tab is first shown
        if (tabId === 'orders' && !window.ordersLoaded) {
            loadOrders();
        }

        // Load positions when tab is first shown
        if (tabId === 'positions' && !window.positionsLoaded) {
            loadPositions();
        }
    });
});

function formatBalance(num) {
    if (num === null || num === undefined) return '-';
    if (num === 0) return '0';
    if (num < 0.0001 && num > 0) return num.toExponential(2);
    if (num < 1) return num.toFixed(6);
    if (num < 1000) return num.toFixed(4);
    return num.toLocaleString(undefined, { maximumFractionDigits: 2 });
}

function loadBalances() {
    const contentEl = document.getElementById('balances-content');

    if (!hasCredentials) {
        contentEl.innerHTML = `
            <div class="p-4">
                <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded">
                    <i class="fas fa-circle-info mr-2"></i> API credentials required to fetch balances.
                    <a href="/profiles/${profileId}/edit" class="underline">Configure now</a>
                </div>
            </div>
        `;
        return;
    }

    contentEl.innerHTML = `
        <div class="p-8 text-center text-gray-400">
            <i class="fas fa-spinner fa-spin text-4xl mb-3"></i>
            <p>Loading balances...</p>
        </div>
    `;

    fetch('/api/profiles/' + profileId + '/balances')
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                contentEl.innerHTML = `
                    <div class="p-4">
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                            <i class="fas fa-circle-exclamation mr-2"></i>${data.error}
                        </div>
                    </div>
                `;
                return;
            }

            const balances = data.balances || [];

            if (balances.length === 0) {
                contentEl.innerHTML = `
                    <div class="p-8 text-center text-gray-400">
                        <i class="fas fa-wallet text-4xl mb-3"></i>
                        <p>No non-zero balances found.</p>
                    </div>
                `;
                return;
            }

            let html = `<div class="overflow-x-auto"><table class="w-full text-sm">
                        <thead>
                            <tr class="bg-gray-50">
                                <th class="text-left py-3 px-3 md:px-4 font-medium text-gray-600">Currency</th>
                                <th class="text-right py-3 px-3 md:px-4 font-medium text-gray-600">Total</th>
                                <th class="text-right py-3 px-3 md:px-4 font-medium text-gray-600">Free</th>
                                <th class="text-right py-3 px-3 md:px-4 font-medium text-gray-600">Used</th>
                                <th class="text-right py-3 px-3 md:px-4 font-medium text-gray-600">USD Value</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
            `;

            balances.forEach(function(b) {
                html += `
                    <tr class="hover:bg-gray-50">
                        <td class="py-3 px-3 md:px-4 font-mono font-medium">${b.currency}</td>
                        <td class="py-3 px-3 md:px-4 text-right">${formatBalance(b.total)}</td>
                        <td class="py-3 px-3 md:px-4 text-right text-gray-500">${formatBalance(b.free)}</td>
                        <td class="py-3 px-3 md:px-4 text-right text-gray-500">${formatBalance(b.used)}</td>
                        <td class="py-3 px-3 md:px-4 text-right">${b.usdValue ? '$' + b.usdValue.toFixed(2) : '-'}</td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';
            contentEl.innerHTML = html;
            window.balancesLoaded = true;
        })
        .catch(err => {
            contentEl.innerHTML = `
                <div class="p-4">
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                        <i class="fas fa-circle-exclamation mr-2"></i>Failed to load balances: ${err.message}
                    </div>
                </div>
            `;
        });
}

// Refresh button
document.getElementById('refresh-balances').addEventListener('click', function() {
    window.balancesLoaded = false;
    loadBalances();
});

function formatPrice(num) {
    if (num === null || num === undefined) return '-';
    if (num === 0) return '0';
    if (num < 0.0001 && num > 0) return num.toExponential(2);
    if (num < 1) return num.toFixed(6);
    if (num < 1000) return num.toFixed(4);
    return num.toLocaleString(undefined, { maximumFractionDigits: 2 });
}

function formatAmount(num) {
    if (num === null || num === undefined) return '-';
    if (num === 0) return '0';
    if (num < 0.0001 && num > 0) return num.toExponential(2);
    if (num < 1) return num.toFixed(6);
    return num.toLocaleString(undefined, { maximumFractionDigits: 4 });
}

function formatDate(timestamp) {
    if (!timestamp) return '-';
    return new Date(timestamp).toLocaleString('id-ID', { timeZone: 'Asia/Jakarta' });
}

function getStatusBadge(status) {
    const statusClasses = {
        'open': 'bg-blue-100 text-blue-800',
        'closed': 'bg-gray-100 text-gray-800',
        'filled': 'bg-green-100 text-green-800',
        'canceled': 'bg-red-100 text-red-800',
        'cancelled': 'bg-red-100 text-red-800',
        'expired': 'bg-yellow-100 text-yellow-800',
        'rejected': 'bg-red-100 text-red-800'
    };
    const cls = statusClasses[status?.toLowerCase()] || 'bg-gray-100 text-gray-600';
    return `<span class="px-2 py-1 rounded text-xs ${cls}">${status || 'unknown'}</span>`;
}

function getSideBadge(side) {
    const cls = side === 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800';
    return `<span class="px-2 py-1 rounded text-xs ${cls}">${side || '-'}</span>`;
}

function loadOrders() {
    const contentEl = document.getElementById('orders-content');

    if (!hasCredentials) {
        contentEl.innerHTML = `
            <div class="p-4">
                <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded">
                    <i class="fas fa-circle-info mr-2"></i> API credentials required to fetch orders.
                    <a href="/profiles/${profileId}/edit" class="underline">Configure now</a>
                </div>
            </div>
        `;
        return;
    }

    contentEl.innerHTML = `
        <div class="p-8 text-center text-gray-400">
            <i class="fas fa-spinner fa-spin text-4xl mb-3"></i>
            <p>Loading orders...</p>
        </div>
    `;

    fetch('/api/profiles/' + profileId + '/orders')
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                contentEl.innerHTML = `
                    <div class="p-4">
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                            <i class="fas fa-circle-exclamation mr-2"></i>${data.error}
                        </div>
                    </div>
                `;
                return;
            }

            // Combine open and closed orders, sort by timestamp descending
            const openOrders = (data.open || []).map(o => ({...o, isOpen: true}));
            const closedOrders = (data.closed || []).map(o => ({...o, isOpen: false}));
            const allOrders = [...openOrders, ...closedOrders].sort((a, b) => (b.timestamp || 0) - (a.timestamp || 0));

            if (allOrders.length === 0) {
                contentEl.innerHTML = `<div class="p-4 text-center text-gray-400">No orders</div>`;
                return;
            }

            let html = `<div class="overflow-x-auto"><table class="w-full text-sm">
                        <thead>
                            <tr class="bg-gray-50 border-b border-gray-200">
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Pair</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Side</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Type</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Price</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Amount</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Filled</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Status</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Date</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Action</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
            `;

            allOrders.forEach(function(order) {
                const actionBtn = order.isOpen
                    ? `<button onclick="cancelOrder('${order.pair}', '${order.id}')" class="text-gray-400 hover:text-red-600 p-1" title="Cancel"><i class="fas fa-rectangle-xmark"></i></button>`
                    : '';
                html += `
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-3 md:px-4 font-mono text-xs">${order.pair}</td>
                        <td class="py-2 px-3 md:px-4">${getSideBadge(order.side)}</td>
                        <td class="py-2 px-3 md:px-4">${getTypeBadge(order.type)}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${formatPrice(order.price)}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${formatAmount(order.amount)}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono text-gray-500">${formatAmount(order.filled)}</td>
                        <td class="py-2 px-3 md:px-4">${getStatusBadge(order.status)}</td>
                        <td class="py-2 px-3 md:px-4 text-gray-500 text-xs">${formatDate(order.timestamp)}</td>
                        <td class="py-2 px-3 md:px-4">${actionBtn}</td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';
            contentEl.innerHTML = html;
            window.ordersLoaded = true;
        })
        .catch(err => {
            contentEl.innerHTML = `
                <div class="p-4">
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                        <i class="fas fa-circle-exclamation mr-2"></i>Failed to load orders: ${err.message}
                    </div>
                </div>
            `;
        });
}

function getTypeBadge(type) {
    return `<span class="px-2 py-1 rounded text-xs bg-gray-100 text-gray-700">${type || '-'}</span>`;
}

function cancelOrder(pair, orderId) {
    if (!confirm('Cancel this order?')) return;

    fetch('/api/profiles/' + profileId + '/orders/' + encodeURIComponent(pair) + '/cancel/' + orderId)
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                alert('Failed to cancel order: ' + data.error);
            } else {
                window.ordersLoaded = false;
                loadOrders();
            }
        })
        .catch(err => {
            alert('Failed to cancel order: ' + err.message);
        });
}

// Refresh orders button
document.getElementById('refresh-orders').addEventListener('click', function() {
    window.ordersLoaded = false;
    loadOrders();
});

function loadPositions() {
    const contentEl = document.getElementById('positions-content');

    if (!hasCredentials) {
        contentEl.innerHTML = `
            <div class="p-4">
                <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded">
                    <i class="fas fa-circle-info mr-2"></i> API credentials required to fetch positions.
                    <a href="/profiles/${profileId}/edit" class="underline">Configure now</a>
                </div>
            </div>
        `;
        return;
    }

    contentEl.innerHTML = `
        <div class="p-8 text-center text-gray-400">
            <i class="fas fa-spinner fa-spin text-4xl mb-3"></i>
            <p>Loading positions...</p>
        </div>
    `;

    fetch('/api/profiles/' + profileId + '/positions')
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                contentEl.innerHTML = `
                    <div class="p-4">
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                            <i class="fas fa-circle-exclamation mr-2"></i>${data.error}
                        </div>
                    </div>
                `;
                return;
            }

            const positions = data.positions || [];

            if (positions.length === 0) {
                contentEl.innerHTML = `
                    <div class="p-8 text-center text-gray-400">
                        <i class="fas fa-chart-line text-4xl mb-3"></i>
                        <p>No open positions.</p>
                    </div>
                `;
                return;
            }

            let html = `<div class="overflow-x-auto"><table class="w-full text-sm">
                        <thead>
                            <tr class="bg-gray-50 border-b border-gray-200">
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Symbol</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Side</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Contracts</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Entry</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Mark</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Notional</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Unreal. PnL</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Liq. Price</th>
                                <th class="text-right py-2 px-3 md:px-4 font-medium text-gray-600">Lev.</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Margin</th>
                                <th class="text-left py-2 px-3 md:px-4 font-medium text-gray-600">Action</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
            `;

            positions.forEach(function(pos) {
                const sideBadge = pos.side === 'long'
                    ? '<span class="px-2 py-0.5 rounded text-xs bg-green-100 text-green-800 whitespace-nowrap"><i class="fas fa-chevron-up mr-1"></i>long</span>'
                    : '<span class="px-2 py-0.5 rounded text-xs bg-red-100 text-red-800 whitespace-nowrap"><i class="fas fa-chevron-down mr-1"></i>short</span>';

                const pnlClass = pos.unrealizedPnl >= 0 ? 'text-green-600' : 'text-red-600';
                const pnlSign = pos.unrealizedPnl >= 0 ? '+' : '';

                html += `
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-3 md:px-4 font-mono text-xs">${pos.symbol}</td>
                        <td class="py-2 px-3 md:px-4 whitespace-nowrap">${sideBadge}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${pos.contracts}${pos.contractSize && pos.contractSize !== 1 ? '<span class="text-gray-400 text-xs">×' + pos.contractSize + '</span>' : ''}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${pos.entryPrice != null ? formatPrice(pos.entryPrice) : '-'}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${pos.markPrice != null ? formatPrice(pos.markPrice) : '-'}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono">${pos.notional != null ? formatPrice(Math.abs(pos.notional)) : '-'}</td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono ${pnlClass}">
                            ${pos.unrealizedPnl != null ? pnlSign + pos.unrealizedPnl.toFixed(4) + (pos.percentage != null ? '<span class="text-xs opacity-75">(' + pos.percentage.toFixed(2) + '%)</span>' : '') : '-'}
                        </td>
                        <td class="py-2 px-3 md:px-4 text-right font-mono text-orange-600">${pos.liquidationPrice != null ? formatPrice(pos.liquidationPrice) : '-'}</td>
                        <td class="py-2 px-3 md:px-4 text-right text-gray-600">${pos.leverage != null ? pos.leverage + '×' : '-'}</td>
                        <td class="py-2 px-3 md:px-4 text-gray-500">${pos.marginMode ? '<span class="px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-600 whitespace-nowrap">' + pos.marginMode + '</span>' : '-'}</td>
                        <td class="py-2 px-3 md:px-4 whitespace-nowrap">
                            <button onclick="closePosition('${encodeURIComponent(pos.symbol)}', 'limit')" class="text-xs px-2 py-1 rounded bg-yellow-100 text-yellow-800 hover:bg-yellow-200 mr-1" title="Limit Close" onclick="return confirm('Limit close ${pos.contracts} ${pos.symbol}?')">Limit</button>
                            <button onclick="closePosition('${encodeURIComponent(pos.symbol)}', 'market')" class="text-xs px-2 py-1 rounded bg-red-100 text-red-800 hover:bg-red-200" title="Market Close">Market</button>
                        </td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';
            contentEl.innerHTML = html;
            window.positionsLoaded = true;
        })
        .catch(err => {
            contentEl.innerHTML = `
                <div class="p-4">
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                        <i class="fas fa-circle-exclamation mr-2"></i>Failed to load positions: ${err.message}
                    </div>
                </div>
            `;
        });
}

function closePosition(symbol, type) {
    const typeLabel = type === 'market' ? 'Market' : 'Limit';
    if (!confirm(typeLabel + ' close position for ' + decodeURIComponent(symbol) + '?')) return;

    fetch('/api/profiles/' + profileId + '/positions/close', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ symbol: symbol, type: type })
    })
        .then(res => res.json())
        .then(data => {
            if (data.error) {
                alert('Failed to close position: ' + data.error);
            } else {
                window.positionsLoaded = false;
                loadPositions();
            }
        })
        .catch(err => {
            alert('Failed to close position: ' + err.message);
        });
}

// Refresh positions button
document.getElementById('refresh-positions').addEventListener('click', function() {
    window.positionsLoaded = false;
    loadPositions();
});
</script>
